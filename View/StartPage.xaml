<Page
    x:Class="TCGLibrary.StartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:TCGLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <GridView HorizontalAlignment="Center" Grid.Column="1" VerticalAlignment="Center" Name="grdset"
                  IsItemClickEnabled="True" ItemClick="Grdset_ItemClick">
            <GridViewItem Name="Pokemon">
                <Image Source="/Assets/Logos/pokemonlogo.png"  Name="imgPK" Margin="50"
               Width="150" Height="300"/>
            </GridViewItem>
            <GridViewItem Name="Magic">
                <Image Source="/Assets/Logos/magic-the-gathering-logo.png"  Name="imgMagic" Margin="50"
               Width="150" Height="300"/>
            </GridViewItem>
        </GridView>
    </Grid>
</Page>
